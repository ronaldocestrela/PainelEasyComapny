@page "/acompanhamento"
@rendermode InteractiveServer
@using WebCliente.Services
@using WebCliente.Models
@inject IAuthService AuthService
@inject IReportService ReportService
@inject NavigationManager Navigation
@inject IBookmakerService BookmakerService
@using System.Globalization

@if (!isLoading)
{
    @if (isAuthenticated)
    {
        <div class="acompanhamento-container">
    <div class="page-header">
        <h2>Acompanhamento Detalhado</h2>
        <p class="text-muted">Relatório completo de performance das campanhas</p>
    </div>

    <div class="filters-section">
        <div class="row">
            <div class="col-md-3">
                <div class="filter-group">
                    <label class="form-label">Data Inicial</label>
                    <input type="date" class="form-control" @bind="startDate" @bind:event="oninput">
                </div>
            </div>
            <div class="col-md-3">
                <div class="filter-group">
                    <label class="form-label">Data Final</label>
                    <input type="date" class="form-control" @bind="endDate" @bind:event="oninput">
                </div>
            </div>
            <div class="col-md-3">
                <div class="filter-group">
                    <label class="form-label">Casa de Apostas</label>
                    <select class="form-select" @bind="selectedBookmakerId">
                        <option value="">Todas</option>
                        @foreach (var bookmaker in bookmakers)
                        {
                            <option value="@bookmaker.Id">@bookmaker.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="filter-group">
                    <label class="form-label">Origem</label>
                    <select class="form-select">
                        <option>Todas</option>
                        <option>Telegram</option>
                        <option>Instagram</option>
                        <option>Bilhete</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button class="btn btn-primary me-2" @onclick="ApplyFilters">
                    <i class="bi bi-search"></i> Filtrar
                </button>
                <button class="btn btn-outline-secondary">
                    <i class="bi bi-download"></i> Exportar
                </button>
            </div>
        </div>
    </div>

    <div class="table-section">
        <div class="table-header">
            <div class="d-flex justify-content-between align-items-center">
                <div class="table-info">
                    <span class="badge bg-secondary">@reports.Count relatórios</span>
                    <span class="text-muted ms-2">Total de clicks: @reports.Sum(r => r.Clicks).ToString("N0", new CultureInfo("pt-BR"))</span>
                </div>
                <div class="table-actions">
                    <div class="btn-group" role="group">
                        <input type="radio" class="btn-check" name="viewMode" id="tableView" checked>
                        <label class="btn btn-outline-primary" for="tableView">
                            <i class="bi bi-table"></i>
                        </label>
                        
                        <input type="radio" class="btn-check" name="viewMode" id="cardView">
                        <label class="btn btn-outline-primary" for="cardView">
                            <i class="bi bi-grid"></i>
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">
                            <div class="d-flex align-items-center">
                                Campanha
                                <i class="bi bi-arrow-up-down ms-1"></i>
                            </div>
                        </th>
                        <th scope="col">
                            <div class="d-flex align-items-center">
                                Casa de Apostas
                                <i class="bi bi-arrow-up-down ms-1"></i>
                            </div>
                        </th>
                        <th scope="col">
                            <div class="d-flex align-items-center">
                                Clicks
                                <i class="bi bi-arrow-up-down ms-1"></i>
                            </div>
                        </th>
                        <th scope="col">
                            <div class="d-flex align-items-center">
                                Cadastros
                                <i class="bi bi-arrow-up-down ms-1"></i>
                            </div>
                        </th>
                        <th scope="col">
                            <div class="d-flex align-items-center">
                                FTDs
                                <i class="bi bi-arrow-up-down ms-1"></i>
                            </div>
                        </th>
                        <th scope="col">
                            <div class="d-flex align-items-center">
                                Depósitos
                                <i class="bi bi-arrow-up-down ms-1"></i>
                            </div>
                        </th>
                        <th scope="col">
                            <div class="d-flex align-items-center">
                                Data
                                <i class="bi bi-arrow-up-down ms-1"></i>
                            </div>
                        </th>
                        <th scope="col">Projeto</th>
                        @* <th scope="col">Ações</th> *@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var report in reports)
                    {
                        <tr>
                            <td>
                                <div class="campanha-info">
                                    <div class="campanha-name">@report.CampaignName</div>
                                </div>
                            </td>
                            <td>
                                <div class="campanha-info">
                                    <div class="campanha-name">@report.BookmakerName</div>
                                </div>
                            </td>
                            <td>
                                <div class="metric-cell">
                                    <strong>@report.Clicks.ToString("N0", new CultureInfo("pt-BR"))</strong>
                                </div>
                            </td>
                            <td>
                                <div class="metric-cell">
                                    <strong>@report.Registrations.ToString("N0", new CultureInfo("pt-BR"))</strong>
                                </div>
                            </td>
                            <td>
                                <div class="metric-cell">
                                    <strong>@report.Ftds.ToString("N0", new CultureInfo("pt-BR"))</strong>
                                </div>
                            </td>
                            <td>
                                <div class="metric-cell">
                                    <strong>R$ @report.Deposits.ToString("N2", new CultureInfo("pt-BR"))</strong>
                                    <small class="text-muted d-block">@GetCurrencyName(report.Currency)</small>
                                </div>
                            </td>
                            <td>
                                <div class="metric-cell">
                                    <strong>@report.ReportDate.ToString("dd/MM/yyyy")</strong>
                                </div>
                            </td>
                            <td>
                                <div class="campanha-info">
                                    <div class="campanha-name">@report.ProjectName</div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="table-footer">
            <div class="d-flex justify-content-between align-items-center">
                <div class="table-summary">
                    <small class="text-muted">
                        Mostrando @reports.Count de @totalCount relatórios
                    </small>
                </div>
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                            <a class="page-link" @onclick="() => ChangePage(currentPage - 1)" href="#">Anterior</a>
                        </li>
                        @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" @onclick="() => ChangePage(i)" href="#">@i</a>
                            </li>
                        }
                        <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                            <a class="page-link" @onclick="() => ChangePage(currentPage + 1)" href="#">Próximo</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            <h4>Acesso Negado</h4>
            <p>Você precisa estar autenticado para acessar esta página.</p>
            <a href="/login" class="btn btn-primary">Ir para Login</a>
        </div>
    }
}
else
{
    <div class="spinner-border" role="status">
        <span class="visually-hidden">Carregando...</span>
    </div>
}

@code {
    private bool isAuthenticated = false;
    private bool isLoading = true;
    private List<ReportListItem> reports = new();
    private List<BookmakerDto> bookmakers = new();

    // Paginação
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages = 1;
    private int totalCount = 0;

    // Filtros de data
    private DateTime? startDate = null;
    private DateTime? endDate = null;
    private string? selectedBookmakerId = null;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await CheckAuthentication();
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task CheckAuthentication()
    {
        if (AuthService != null)
        {
            await AuthService.InitializeAsync();
            isAuthenticated = AuthService.IsAuthenticated;

            if (isAuthenticated)
            {
                await LoadBookmakers();
                await LoadReports();
            }
        }
    }

    private async Task LoadReports()
    {
        try
        {
            var reportsData = await ReportService.GetReportsListAsync(currentPage, pageSize, startDate, endDate, selectedBookmakerId);
            if (reportsData != null)
            {
                reports = reportsData.Items;
                totalPages = reportsData.TotalPages;
                totalCount = reportsData.TotalCount;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao carregar dados dos reports: {ex.Message}");
        }
    }

    private async Task LoadBookmakers()
    {
        try
        {
            var bookmakersData = await BookmakerService.GetAllBookmakersAsync();
            if (bookmakersData != null)
            {
                bookmakers = bookmakersData;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao carregar bookmakers: {ex.Message}");
        }
    }

    private async Task ApplyFilters()
    {
        currentPage = 1; // Reset para primeira página quando aplicar filtros
        await LoadReports();
    }

    private async Task ChangePage(int page)
    {
        if (page < 1 || page > totalPages) return;
        currentPage = page;
        await LoadReports();
        StateHasChanged();
    }

    private string GetCurrencyName(int currency)
    {
        return currency switch
        {
            1 => "USD",
            2 => "BRL",
            3 => "EUR",
            _ => "Desconhecida"
        };
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Ativa" => "bg-success",
            "Pausada" => "bg-warning",
            "Finalizada" => "bg-secondary",
            _ => "bg-primary"
        };
    }
}